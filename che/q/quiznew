  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrious/4.0.2/qrious.min.js"></script>

  <script>
    // --- å…±é€šï¼šãƒ˜ãƒƒãƒ€ãƒ¼ãƒ»ãƒ•ãƒƒã‚¿ãƒ¼èª­ã¿è¾¼ã¿ ---
    async function loadCommonLayout() {
      const headerEl = document.getElementById('site-header');
      const footerEl = document.getElementById('site-footer');

      try {
        const [headerHtml, footerHtml] = await Promise.all([
          fetch('../../common/header.html').then(r => r.text()),
          fetch('../../common/footer.html').then(r => r.text())
        ]);
        headerEl.innerHTML = headerHtml;
        footerEl.innerHTML = footerHtml;
      } catch (e) {
        console.error('ãƒ˜ãƒƒãƒ€ãƒ¼ï¼ãƒ•ãƒƒã‚¿ãƒ¼ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ:', e);
      }
    }

    // --- å…ƒã®ã‚³ãƒ¼ãƒ‰ï¼šã‚¯ã‚¤ã‚ºéƒ¨åˆ† ---
    function getQueryParam(name) {
      const url = new URL(location.href);
      return url.searchParams.get(name);
    }

    async function initQuiz() {
      const chapter = getQueryParam('chapter') || 'ch1';
      const script = document.createElement('script');
      script.src = `data-${chapter}.js`;
      document.head.appendChild(script);
      script.onload = () => renderQuiz(window.chapterData);
    }

    function renderQuiz(data) {
      document.title = data.title;

      const pageTitle = document.getElementById('pageTitle');
      if (pageTitle) pageTitle.textContent = data.title;

      const form = document.getElementById('quizForm');
      const answers = {};

      data.sections.forEach(section => {
        const sec = document.createElement('div');
        sec.className = 'section';
        sec.innerHTML = `<h2>${section.subtitle}</h2>`;

        section.questions.forEach((q) => {
          answers[q.name] = q.answer;
          const qdiv = document.createElement('div');
          qdiv.className = 'question';

          const optionsHtml = [...Array(6)].map((_, j) =>
            `<label><input type="radio" name="${q.name}" value="${j + 1}">${j + 1}</label>`
          ).join(' ');

          qdiv.innerHTML =
            `${q.label}ï¼š${optionsHtml} ` +
            `<span class="result" id="r-${q.name}"></span>`;

          sec.appendChild(qdiv);
        });

        form.appendChild(sec);
      });

      const submitBtn = document.createElement('button');
      submitBtn.type = 'submit';
      submitBtn.textContent = 'ç­”ãˆåˆã‚ã›';
      submitBtn.className = 'quiz-btn';
      form.appendChild(submitBtn);

      form.addEventListener('submit', e => {
        e.preventDefault();
        let bin = '';
        for (const key in answers) {
          const sel = document.querySelector(`input[name="${key}"]:checked`);
          const result = document.getElementById(`r-${key}`);
          if (sel && parseInt(sel.value, 10) === answers[key]) {
            result.textContent = 'âœ…';
            result.style.color = 'green';
            bin += '1';
          } else {
            result.textContent = sel ? 'âŒ' : 'æœªé¸æŠ';
            result.style.color = sel ? 'red' : 'gray';
            bin += '0';
          }
        }
        const full = '1' + bin;
        const code = BigInt('0b' + full).toString();
        document.getElementById('resultCode').textContent = code;
        generateQR(code);
      });

      document.getElementById('copyBtn').addEventListener('click', () => {
        const code = document.getElementById('resultCode').textContent;
        if (code.includes('ç”Ÿæˆã•ã‚Œã¦ã„ã¾ã›ã‚“')) {
          alert('ã¾ã ã‚³ãƒ¼ãƒ‰ãŒç”Ÿæˆã•ã‚Œã¦ã„ã¾ã›ã‚“ã€‚');
          return;
        }
        const full = 'å•é¡Œç¢ºèªã‚³ãƒ¼ãƒ‰ï¼š' + code;
        navigator.clipboard.writeText(full)
          .then(() => alert('ã‚³ãƒ”ãƒ¼ã—ã¾ã—ãŸï¼\n\n' + full))
          .catch(err => alert('ã‚³ãƒ”ãƒ¼å¤±æ•—: ' + err));
      });
    }

    function generateQR(text) {
      const qrContainer = document.getElementById('qrcode');
      qrContainer.innerHTML = '';
      const qr = new QRious({
        element: document.createElement('canvas'),
        value: text,
        size: 200,
        background: 'white',
        foreground: '#003366'
      });
      qrContainer.appendChild(qr.element);
    }

    // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ï¼šå…±é€šãƒ¬ã‚¤ã‚¢ã‚¦ãƒˆ â†’ ã‚¯ã‚¤ã‚ºåˆæœŸåŒ–
    window.addEventListener('DOMContentLoaded', async () => {
      await loadCommonLayout();
      await initQuiz();
    });
  </script>
